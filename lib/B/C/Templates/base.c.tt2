/* only render the init_xops section if needed */
static void bc_setup_xop_ppaddr(OP* op, const char* name) {
    HE *he;
    SV *sv;

    /* lookup for the custom op with name and replace it there */
    op->op_ppaddr = NULL;

    if ( PL_custom_ops ) {
        hv_iterinit(PL_custom_ops);
        while (he = hv_iternext(PL_custom_ops)) {
            sv = HeVAL(he);
            /* { PTR2IV(ppaddr) => PTR2IV(xop) } */
            //PerlIO_printf(Perl_debug_log, " - got a key value... %x\n", SvIV(sv) );
            XOP *xop = (XOP*) SvIV(sv);

            if ( strEQ(xop->xop_name, name) ) {
                //PerlIO_printf(Perl_debug_log, "found xOP %s\n", name);
                //SV *key = HeSVKEY_force(he);
                long ppaddr = strtol( (char *) HeKEY(he), NULL, 10 );

                /* setup the address of the custom OP */
                op->op_ppaddr = (OP* (*)()) ppaddr;
                break;
            }

        }
    }

    /* sanity check that we found the Custom OP */
    if (!op->op_ppaddr)
        Perl_croak_nocontext("Failed to find Custom OP for '%s'", name);

}

